<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spannablestring.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_foreground"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_background"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_strikethrough"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_underline"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_superscript"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_subscript"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_style"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_relativesize"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_image"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_click"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_url"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:textSize="18sp"
            android:gravity="center"/>

    </LinearLayout>

</ScrollView>
